from googleapiclient.discovery import build

key = 'AIzaSyBG5vLsKCtF94glQUIeLnIXjGdrjHKtOWY'
urlcopy = "https://www.youtube.com/watch?v="
yt = build('youtube', 'v3', developerKey=key)
videoid = []


class Search:
    def __init__(self, tx, nm):
        self.__topic = tx
        self.__num = nm

    pass


idea = input("Enter School Topic")
l = input("Enter Number of Videos")
n = Search(idea, l)
numR = int(l)

k = yt.search().list(
    part='snippet',
    q=idea,
    topicId="/m/01k8wb",
    type = 'video',
    videoDuration = "short",
    order='relevance',
    maxResults=numR
).execute()

print(k)

for result in k.get("items", []):
    videoid.append("%s" % (result["id"]["videoId"]))

print ("\n".join(videoid))

for i in range(numR):
    print (urlcopy + videoid[i])

